{% extends 'gui/admin/base.html.twig' %}

{% block title %}Profil - Administration | Portfolio{% endblock %}

{% block body %}
    <div class="d-flex mb-4 mt-3">
        <span class="fa-stack me-2 ms-n1">
            <i class="fas fa-circle fa-stack text-300"></i>
            <i class="fa-inverse fa-stack-1x text-danger fas fa-user-pen"></i>
        </span>
        <div class="col">
            <h5 class="mb-0 text-danger position-relative">
                <span class="bg-200 dark__bg-1100 pe-3">Profil</span>
                <span class="border position-absolute top-50 translate-middle-y w-100 start-0 z-n1"></span>
            </h5>
            <p class="mb-0">Cette page vous permet de modifier votre profil.</p>
        </div>
    </div>
    <div class="row g-0">
        <div class="col-lg-12 ps-lg-2">
            <div class="card mb-3">
                <div class="card-header position-relative min-vh-25 mb-7">
                    <div class="bg-holder rounded-3 rounded-bottom-0" style="background-image:url({{ asset('assets/admin/img/profil/code.jpeg') }});"></div>
                    <div class="avatar avatar-5xl avatar-profile">
                        <img class="rounded-circle img-thumbnail shadow-sm" src="{{ asset('assets/admin/img/profil/chemise.jpg') }}" width="200" alt="" />
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <h4 class="mb-1">
                                {{ userInfo.prenom }} {{ userInfo.nom }} <small class="bi bi-patch-check-fill text-primary" data-fa-transform="shrink-4 down-2"></small>
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-0">
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Erreur :</strong> {{ message }}
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Parfait :</strong> {{ message }}
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                <div class="col-lg-8 pe-lg-2">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h5 class="mb-0">Edition du profil</h5>
                        </div>
                        <div class="card-body bg-light">
                            {{ form_start(profilForm) }}
                                <div class="row">
                                    <div class="col-lg-6">
                                        {{ form_row(profilForm.prenom) }}
                                    </div>
                                    <div class="col-lg-6">
                                        {{ form_row(profilForm.nom) }}
                                    </div>
                                    <div class="col-lg-6">
                                        {{ form_row(profilForm.email) }}
                                    </div>
                                    <div class="col-lg-6">
                                        {{ form_row(profilForm.telephone) }}
                                    </div>
                                    <div class="col-lg-12">
                                        {{ form_row(profilForm.presentation) }}
                                    </div>
                                    <div class="col-lg-6">
                                        {{ form_row(profilForm.ville) }}
                                    </div>
                                    <div class="col-lg-6">
                                        {{ form_row(profilForm.permis) }}
                                    </div>
                                    <div class="col-lg-12">
                                        {{ form_row(profilForm.jobs) }}
                                    </div>
                                    <div class="col-lg-12">
                                        {{ form_row(profilForm.site) }}
                                    </div>
                                    <div class="col-lg-12">
                                        {{ form_row(profilForm.linkedin) }}
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end">
                                    <button class="btn btn-primary me-1 mb-1" type="submit">Modifier</button>
                                </div>
                            {{ form_end(profilForm) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 ps-lg-2">
                    <div class="sticky-sidebar">
                        <div class="card mb-3">
                            <div class="card-header overflow-hidden">
                                <h5 class="mb-0">Modifier le mot de passe</h5>
                            </div>
                            <div class="card-body bg-light">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}