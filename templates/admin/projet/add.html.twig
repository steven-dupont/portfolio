{% extends 'gui/admin/base.html.twig' %}

{% block title %}Ajouter un projet - Administration | Portfolio{% endblock %}

{% block body %}
    <div class="d-flex mb-4 mt-3">
        <span class="fa-stack me-2 ms-n1">
            <i class="fas fa-circle fa-stack text-300"></i>
            <i class="fa-inverse fa-stack-1x text-danger fas fa-table-columns"></i>
        </span>
        <div class="col">
            <h5 class="mb-0 text-danger position-relative">
                <span class="bg-200 dark__bg-1100 pe-3">Projets</span>
                <span class="border position-absolute top-50 translate-middle-y w-100 start-0 z-n1"></span>
            </h5>
            <p class="mb-0">Cette page vous permet d'ajouter un projet.</p>
        </div>
    </div>
    <div class="row g-0">
        <div class="col-lg-12 ps-lg-2">
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Erreur :</strong> {{ message }}
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <div class="sticky-sidebar">
                <div class="card mb-3">
                    <div class="card-header d-flex flex-between-center">
                        <h5 class="mb-0">Ajouter un projet</h5>
                        <a class="btn btn-falcon-default btn-sm" href="{{ path('admin.projet.show') }}">
                            Retour
                        </a>
                    </div>
                    <div class="card-body bg-light">
                        {{ form_start(projetForm) }}
                            {{ form_row(projetForm.nom) }}
                            {{ form_row(projetForm.type) }}
                            {{ form_row(projetForm.imageFile, {'attr': {'required': true}}) }}
                            {{ form_row(projetForm.lien_visuel) }}
                            {{ form_row(projetForm.lien_telechargement) }}
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-lg-2">{{ form_row(projetForm.visuel) }}</div>
                                    <div class="col-lg-2">{{ form_row(projetForm.telechargement) }}</div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                    <button class="btn btn-primary me-1 mb-1" type="submit">Cr√©er</button>
                            </div>
                        {{ form_end(projetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}