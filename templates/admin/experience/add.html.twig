{% extends 'gui/admin/base.html.twig' %}

{% block title %}Ajouter une expérience - Administration | Portfolio{% endblock %}

{% block body %}
    <div class="d-flex mb-4 mt-3">
        <span class="fa-stack me-2 ms-n1">
            <i class="fas fa-circle fa-stack text-300"></i>
            <i class="fa-inverse fa-stack-1x text-danger fas fa-briefcase"></i>
        </span>
        <div class="col">
            <h5 class="mb-0 text-danger position-relative">
                <span class="bg-200 dark__bg-1100 pe-3">Expériences</span>
                <span class="border position-absolute top-50 translate-middle-y w-100 start-0 z-n1"></span>
            </h5>
            <p class="mb-0">Cette page vous permet d'ajouter une expérience.</p>
        </div>
    </div>
    <div class="row g-0">
        <div class="col-lg-12 ps-lg-2">
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Erreur :</strong> {{ message }}
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <div class="sticky-sidebar">
                <div class="card mb-3">
                    <div class="card-header d-flex flex-between-center">
                        <h5 class="mb-0">Ajouter une expérience</h5>
                        <a class="btn btn-falcon-default btn-sm" href="{{ path('admin.experience.show') }}">
                            Retour
                        </a>
                    </div>
                    <div class="card-body bg-light">
                        {{ form_start(experienceForm) }}
                            {{ form_row(experienceForm.poste) }}
                            {{ form_row(experienceForm.date) }}
                            {{ form_row(experienceForm.localisation) }}
                            <div class="min-vh-50">
                                {{ form_row(experienceForm.contenu) }}
                            </div>
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-primary me-1 mb-1" type="submit">Créer</button>
                            </div>
                        {{ form_end(experienceForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/admin/vendors/tinymce/tinymce.min.js') }}"></script>
{% endblock %}